{
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "outDir": "",
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "jsx": "react",
    "module": "es2015",
    "target": "es2020",
    "strict": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
